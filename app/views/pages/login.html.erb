<%= provide(:title, 'Login') %>

<h1>Warriors</h1>
<div class="loginBox">
  <form name="login" action="login" method="get">
    <table>
      <thead>Login</thead>
      <tr>
        <td>User:</td>
        <td><input type="text" name="user"></td>
      </tr>
      <tr>
        <td>Password:</td>
        <td><input type="password" name="password"></td>
      </tr>
      <tr>
        <td>&nbsp;</td>
        <td align="right"><input type="submit" value="Submit"></td>
      </tr>
    </table>
   </form>
</div>